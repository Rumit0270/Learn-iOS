# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'Learn-iOS' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Learn-iOS
	
  # Firebase
  pod 'Firebase/Core'
  pod 'Firebase/Auth'
  pod 'Fabric', '~> 1.9.0'
  pod 'Crashlytics', '~> 3.12.0'

  # Networking - JSON Parsing
  pod 'SwiftyJSON'
  pod 'Alamofire', '~> 5.0.0-beta.5'
  pod 'RxSwift'
  
  # Async Display Kit
  pod 'Texture/IGListKit'
  target 'Learn-iOSTests' do
    inherit! :search_paths
    # Pods for testing
     pod 'Quick', '~> 2.1.0'
     pod 'Nimble', '~> 8.0.1'
     pod 'Firebase'

  end

  target 'Learn-iOSUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
